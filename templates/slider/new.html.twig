{% extends 'base.html.twig' %}

{% block title %}Ajouter une image au Slider{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="mb-4">Ajouter une image au Slider</h1>

		{{ form_start(form, {'attr': {'class': 'row g-3'}}) }}

		<div class="col-md-6">
			<div class="form-group">
				{{ form_label(form.imageFile, 'SÃ©lectionner une image', {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(form.imageFile) }}
			</div>
		</div>

		<div class="col-md-6">
			<div class="form-group">
				{{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(form.title) }}
			</div>
		</div>

		<div class="col-md-6">
			<div class="form-group">
				{{ form_label(form.link, 'Lien (URL)', {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(form.link, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(form.link) }}
			</div>
		</div>

		<div class="col-md-6">
			<div class="form-group">
				{{ form_label(form.position, 'Position', {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(form.position, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(form.position) }}
			</div>
		</div>

		<div class="col-12">
			<button type="submit" class="btn btn-primary mt-3">Enregistrer</button>
		</div>

		{{ form_end(form) }}
	</div>
{% endblock %}
