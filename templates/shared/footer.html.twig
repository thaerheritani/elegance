<footer class="bg-primary text-white mt-5">
	<div class="container py-5">
		<div class="row">
			<!-- Logo and description -->
			<div class="col-md-4">
				<h3 class="mb-4">{{ 'footer.elegance'|trans }}</h3>
				<p>{{ 'footer.description'|trans }}</p>
			</div>

			<!-- Address and contact -->
			<div class="col-md-4">
				<h5 class="mb-4">{{ 'footer.address_and_contact'|trans }}</h5>
				<p><i class="bi bi-geo-alt-fill"></i> {{ 'footer.address'|trans }}</p>
				<p><i class="bi bi-envelope-fill"></i> <a href="mailto:{{ 'footer.contact_email'|trans }}" class="text-white text-decoration-none">{{ 'footer.contact_email'|trans }}</a></p>
				<p><i class="bi bi-telephone-fill"></i> {{ 'footer.phone'|trans }}</p>
			</div>

			<!-- Contact Us section -->
			<div class="col-md-4">
				<h5 class="mb-4">{{ 'footer.have_question'|trans }}</h5>
				<p>{{ 'footer.contact_us'|trans }}</p>
				<a href="{{ path('app_contact') }}" class="btn btn-secondary rounded-pill px-4">{{ 'footer.contact_us'|trans }}</a>
			</div>
		</div>

		<!-- Copyright and Social Icons -->
		<div class="row mt-4">
			<div class="col-md-6">
				<p class="text-white">{{ 'footer.copyright'|trans|raw }}</p>
			</div>
			<div class="col-md-6 text-md-end">
				<a href="#" class="text-white me-2"><i class="bi bi-facebook"></i></a>
				<a href="#" class="text-white me-2"><i class="bi bi-youtube"></i></a>
				<a href="#" class="text-white"><i class="bi bi-instagram"></i></a>
			</div>
		</div>
	</div>
</footer>
