{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title'|trans }}{% endblock %}

{% block body %}
    {% include 'shared/nav.html.twig' %}

    <div class="container mt-5 pt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post" class="card p-4 shadow-sm">
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            {{ 'login.already_logged_in'|trans }} {{ app.user.userIdentifier }},
                            <a href="{{ path('app_logout') }}">{{ 'login.logout'|trans }}</a>
                        </div>
                    {% endif %}

                    <h1 class="h4 mb-3 text-center">{{ 'login.title'|trans }}</h1>

                    <!-- Email Field -->
                    <div class="form-group mb-3">
                        <label for="inputEmail">{{ 'login.email'|trans }}</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>

                    <!-- Password Field -->
                    <div class="form-group mb-3">
                        <label for="inputPassword">{{ 'login.password'|trans }}</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>

                    <!-- CSRF Token -->
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <!-- Remember Me Checkbox -->
                    <div class="form-group form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="rememberMe" name="_remember_me">
                        <label class="form-check-label" for="rememberMe">{{ 'login.remember_me'|trans }}</label>
                    </div>

                    <!-- Submit Button -->
                    <button class="btn btn-primary w-100" type="submit">{{ 'login.submit'|trans }}</button>
                    <div class="text-center mt-3">
                        <p>{{ 'login.no_account'|trans }} <a href="{{ path('app_register') }}">{{ 'login.register'|trans }}</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
