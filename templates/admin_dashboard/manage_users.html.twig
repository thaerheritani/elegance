{% extends 'base.html.twig' %}

{% block title %}Gérer les utilisateurs{% endblock %}

{% block body %}
	{% include 'shared/nav.html.twig' %}
	<div class="container mt-5">
		<h1>Gérer les utilisateurs</h1>

		<table class="table">
			<thead>
			<tr>
				<th>ID</th>
				<th>Nom</th>
				<th>Email</th>
				<th>Rôles</th>
				<th>Actions</th>
			</tr>
			</thead>
			<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.firstName }} {{ user.lastName }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.roles | join(', ') }}</td>
					<td>
						<a href="{{ path('admin_user_edit', {id: user.id}) }}" class="btn btn-warning">Modifier</a>
						<a href="{{ path('admin_user_delete', {id: user.id}) }}" class="btn btn-danger">Supprimer</a>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
	{% include 'shared/footer.html.twig' %}

{% endblock %}
