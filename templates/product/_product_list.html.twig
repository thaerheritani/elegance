{% block body %}
    <div class="container mt-5">

        <h2 class="mb-4 text-center">{{ 'Nos meilleures offres'|trans }}</h2>
        <p class="mb-4">{{ 'Ces promos pourraient vous intéresser'|trans }}</p>

        <!-- Slider des produits avec réduction -->
        <div id="discountedProductsCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <!-- Affichage d'un produit par item de carrousel -->
                {% for productsChunk in productsWithDiscount|batch(4) %}
                    <div class="carousel-item {% if loop.first %}active{% endif %}">
                        <div class="row">
                            {% for product in productsChunk %}
                                <div class="col-md-3 mb-4">
                                    <div class="card h-100">
                                        <img src="{{ asset('images/products/' ~ (product.photos[0].photoPath ?? 'default.png')) }}" class="card-img-top" alt="{{ product.name }}">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ product.name }}</h5>
                                            <p class="card-text">{{ product.description|slice(0, 100) ~ '...' }}</p>

                                            <!-- Affichage des prix -->
                                            {% if product.discount %}
                                                <p class="card-text">
                                                    <span class="text-danger"><strong>{{ product.getFinalPrice() }} €</strong></span>
                                                    <span class="text-muted text-decoration-line-through">{{ product.price }} €</span>
                                                </p>
                                            {% else %}
                                                <p class="card-text"><strong>{{ product.price }} €</strong></p>
                                            {% endif %}

                                            <button class="btn btn-success add-to-cart" data-id="{{ product.id }}">
                                                <i class="bi bi-cart"></i> Ajouter au panier
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Contrôles du carrousel -->
            <button class="carousel-control-prev" type="button" data-bs-target="#discountedProductsCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#discountedProductsCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <!-- Affichage des autres produits -->
        <h2 class="text-center">{{ 'Our Products'|trans }}</h2>
        <div class="row">
            {% for product in productsWithoutDiscount %}
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="card product-card h-100" onclick="window.location.href='{{ path('app_product_show', {'id': product.id}) }}';">
                        <img src="{{ asset('images/products/' ~ (product.photos[0].photoPath ?? 'default.png')) }}" class="card-img-top img-fluid" alt="{{ product.name }}">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate">{{ product.name }}</h5>
                            <p class="card-text text-muted">{{ product.description|slice(0, 80) ~ '...' }}</p>
                            <p class="card-text"><strong>{{ 'Price'|trans }}:</strong> {{ product.price }} €</p>
                            <button class="btn btn-success add-to-cart" data-id="{{ product.id }}" data-name="{{ product.name }}" data-price="{{ product.getFinalPrice() }}">
                                <i class="bi bi-cart"></i> {{ 'Add to cart'|trans }}
                            </button>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>{{ 'No products available'|trans }}</p>
            {% endfor %}
        </div>

        <!-- Rendu de la pagination -->
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(productsWithoutDiscount) }}
        </div>

    </div>

{% endblock %}
{% block javascripts %}
<script>
    document.addEventListener('turbo:load', function () {
        attachCartEvents();
        updateCartCount();
    });

    function attachCartEvents() {
        // Ajout au panier
        document.querySelectorAll('.add-to-cart').forEach(button => {
            button.addEventListener('click', function () {
                const productId = this.getAttribute('data-id');

                fetch(`/panier/ajouter/${productId}`, {
                    method: 'POST',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' }
                })
                        .then(response => response.json())
                        .then(data => {
                            updateCartCount();
                            button.textContent = 'Ajouté';
                            button.disabled = true;
                        })
                        .catch(error => console.error('Erreur lors de l\'ajout au panier:', error));
            });
        });
    }

    function updateCartCount() {
        // Mettre à jour le badge du panier
        fetch('/cart/count', {
            method: 'GET',
            headers: { 'X-Requested-With': 'XMLHttpRequest' }
        })
                .then(response => response.json())
                .then(data => {
                    document.getElementById('cart-count').textContent = data.count;
                })
                .catch(error => console.error('Erreur lors de la mise à jour du panier:', error));
    }

</script>
{% endblock %}