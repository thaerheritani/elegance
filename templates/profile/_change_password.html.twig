{% extends 'profile/index.html.twig' %}

{% block profile_content %}
	<h3>{{ 'Changer le mot de passe'|trans }}</h3>
	{{ form_start(changePasswordForm) }}
	<div class="form-group">
		{{ form_label(changePasswordForm.currentPassword) }}
		{{ form_widget(changePasswordForm.currentPassword, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(changePasswordForm.currentPassword) }}
	</div>

	<div class="form-group">
		{{ form_label(changePasswordForm.newPassword) }}
		{{ form_widget(changePasswordForm.newPassword, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(changePasswordForm.newPassword) }}
	</div>

	<button type="submit" class="btn btn-primary mt-3">{{ 'Changer le mot de passe'|trans }}</button>
	{{ form_end(changePasswordForm) }}
{% endblock %}
