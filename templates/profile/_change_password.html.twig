<div class="card">
	<div class="card-header">
		Change Password
	</div>
	<div class="card-body">
		{{ form_start(changePasswordForm) }}
		<div class="form-group mb-3">
			{{ form_label(changePasswordForm.currentPassword, 'Current Password', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(changePasswordForm.currentPassword, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(changePasswordForm.currentPassword) }}
		</div>

		<div class="form-group mb-3">
			{{ form_label(changePasswordForm.plainPassword, 'New Password', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(changePasswordForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(changePasswordForm.plainPassword) }}
		</div>

		<button type="submit" class="btn btn-primary">Change Password</button>
		{{ form_end(changePasswordForm) }}
	</div>
</div>
