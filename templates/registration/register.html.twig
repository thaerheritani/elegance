{% extends 'base.html.twig' %}

{% block title %}{{ 'registration.title'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mt-4">
                    <div class="card-header">
                        <h1 class="text-center">{{ 'registration.title'|trans }}</h1>
                    </div>
                    <div class="card-body">
                        {% for flash_error in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}

                        {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}

                        <div class="form-group row mb-4">
                            {{ form_label(registrationForm.firstName, 'registration.first_name'|trans, {'label_attr': {'class': 'col-md-4 col-form-label text-md-right'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(registrationForm.firstName) }}
                            </div>
                        </div>

                        <div class="form-group row mb-4">
                            {{ form_label(registrationForm.lastName, 'registration.last_name'|trans, {'label_attr': {'class': 'col-md-4 col-form-label text-md-right'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(registrationForm.lastName) }}
                            </div>
                        </div>

                        <div class="form-group row mb-4">
                            {{ form_label(registrationForm.email, 'registration.email'|trans, {'label_attr': {'class': 'col-md-4 col-form-label text-md-right'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(registrationForm.email) }}
                            </div>
                        </div>

                        <div class="form-group row mb-4">
                            {{ form_label(registrationForm.plainPassword, 'registration.password'|trans, {'label_attr': {'class': 'col-md-4 col-form-label text-md-right'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'autocomplete': 'new-password'}}) }}
                                {{ form_errors(registrationForm.plainPassword) }}
                            </div>
                        </div>

                        <div class="form-group row mb-4">
                            {{ form_label(registrationForm.dateOfBirth, 'registration.date_of_birth'|trans, {'label_attr': {'class': 'col-md-4 col-form-label text-md-right'}}) }}
                            <div class="col-md-6">
                                {{ form_widget(registrationForm.dateOfBirth, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(registrationForm.dateOfBirth) }}
                            </div>
                        </div>

                        <div class="form-group form-check row mb-4">
                            <div class="col-md-6 offset-md-4">
                                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(registrationForm.agreeTerms, 'registration.agree_terms'|trans, {'label_attr': {'class': 'form-check-label'}}) }}
                                {{ form_errors(registrationForm.agreeTerms) }}
                            </div>
                        </div>

                        <div class="form-group row mb-0 justify-content-center">
                            <div class="col-md-8 offset-md-4">
                                <button type="submit" class="btn btn-primary">{{ 'registration.submit'|trans }}</button>
                            </div>
                        </div>

                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
